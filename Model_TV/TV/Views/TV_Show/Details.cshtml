@model Model_TV.Models.TV_Show
@inject IStringLocalizer<TV_Show> localizer
@{
    ViewData["Title"] = localizer["TV Show Details"];
    var img = await repoAttachment.GetById(Model.AttachmentId);
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="card-title">@localizer["TV Show Details"]</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">
                            @localizer["Title"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-4 font-weight-bold">
                            @localizer["Release Date"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ReleaseDate)
                        </dd>
                        <dt class="col-sm-4 font-weight-bold">
                            @localizer["Rating"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Rating)
                        </dd>
                        <dt class="col-sm-4 font-weight-bold">
                            @localizer["URL"]
                        </dt>
                        <dd class="col-sm-8">
                            <a href="@Model.URL" class="text-decoration-none">@Model.URL</a>
                        </dd>
                        <dt class="col-sm-4 font-weight-bold">
                            @localizer["Languages"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.languages)
                            <p>@localizer["Languages Count"]: @Model.languages.Count()</p>
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <img src="~/@img.Path_File" class="img-fluid rounded" alt="@Model.Title" />
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center d-flex justify-content-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary mx-2">@localizer["Edit"]</a>

        <form asp-action="Delete" method="post" class="mx-2">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@localizer["Delete"]" class="btn btn-danger" />
        </form>

        <form asp-action="SoftDelete" method="post" class="mx-2">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@localizer["Soft Delete"]" class="btn btn-warning" />
        </form>

        <a asp-action="Index" class="btn btn-secondary mx-2">@localizer["Back to List"]</a>
    </div>
</div>
